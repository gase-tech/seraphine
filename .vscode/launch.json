{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Nestjs Debug",
      "program": "${workspaceFolder}/apps/api/src/main.ts",
      "preLaunchTask": "tsc: watch - apps/api/tsconfig.json",
      "outFiles": ["${workspaceFolder}/dist/apps/api/**/*.js"],
      "skipFiles": [
        "${workspaceFolder}/node_modules/**/*.js",
        "<node_internals>/**/*.js"
      ],
      "port": 3333
    }
  ]
}
